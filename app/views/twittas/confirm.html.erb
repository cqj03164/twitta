<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

   <h3>以下の内容で、登録します。</h3>
   <%= form_for(@twitta, url: twittas_path) do |f| %>
      <%= f.hidden_field :tweeter %>
      <%= f.hidden_field :tweet %>
      
      <p>投稿者:<%= @twitta.tweeter %></p>
      <p>つぶやき:<%= @twitta.tweet %></p>
      
      <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_for(@twitta, url: new_twitta_path, method: 'get') do |f| %>
      <%= f.hidden_field :tweeter %>
      <%= f.hidden_field :tweet %>
      <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
    <% end %>
  </div>
</div>

