<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
    
      <h1>つぶやき編集</h1>

<%= form_for(@twitta, url: twitta_path(@twitta)) do |f| %>

  <%= f.label :投稿者 %>
